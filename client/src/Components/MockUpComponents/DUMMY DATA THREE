/* eslint-disable no-unused-vars */
import React, { useState, useEffect } from 'react'
import axios from 'axios'
import { useParams } from 'react-router-dom'

import FilteredByCategoryCard from './FilteredByCategoryCard'

const FilteredByCategory = () => {

  const [allData, setAllData] = useState([])
  const [errors, setErrors] = useState(false)

  const { id, name } = useParams()

  useEffect(() => {

    const getData = async () => {

      try {
        const { data } = await axios.get(`/api/categories/${id}/`)

        const categoryData = []

        data.truffles.map(item => {
          if (categoryData.indexOf(item.name) < 0) {
            categoryData.push(item)
          }
        })

        setAllData(categoryData)

      } catch (err) {
        console.log(err.message)
        setErrors(true)
      }
    }

    getData()

  }, [])

  const category = allData.filter(item => {
    return item.id === id
  })


  return (

    <>
      {category.map(item => {
        return <FilteredByCategoryCard key={item.id} {...item} />>
      })}
    </>

  )

}